<!DOCTYPE html>
<html>
  <head>
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <div class="container">
      <h1>🏆 Intern Leaderboard</h1>
      <table class="leaderboard-table">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Total Donations</th>
          </tr>
        </thead>
        <tbody>
          <% leaderboard.forEach((intern, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= intern.name %></td>
            <td>₹<%= intern.donation %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
